<odoo>
    <!-- Vista de lista para rs.class -->
    <record id="view_rs_class_list" model="ir.ui.view">
        <field name="name">rs.class.list</field>
        <field name="model">rs.class</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="course_name"/>
                <field name="responsible_id"/>
                <field name="create_uid"/>
                <field name="rs_location"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para rs.class -->
    <record id="view_rs_class_form" model="ir.ui.view">
        <field name="name">rs.class.form</field>
        <field name="model">rs.class</field>
        <field name="arch" type="xml">
            <form string="Course">
            <header>
                  <button name="%(rs_registration_action)d"
                            type="action"
                            string="Sessions by Action"
                            context="{'search_default_course_id': 1, 'default_course_id':id, 'default_session_name':'New by Action button'}"
                            />
                <button name="action_rs_registration_action_view"
                    type="object"
                    string="Sessions Obj by view"
                    />

            </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_rs_registration_action"
                                type="object"
                                string="Sessions"
                                />

                    <button name="action_registration_action_two"
                                type="object"
                                confirm="You wish to see registration records?"
                                class="oe_stat_button"
                                icon="fa-thermometer"
                                invisible="count_sessions == 0"
                                >
                                <field name="count_sessions" widget="statinfo" string="Sessions"/>
                    </button>

                </div>

                    <group>
                        <field name="course_name"/>
                        <field name="description"/>
                        <field name="responsible_id"/>
                        <field name="create_uid"/>
                        <field name="rs_location"/>
                    </group>
                    <notebook>
                        <page string="Sessions">

                             <field name="session_ids">
                             <!-- decoration-success=""
                                decoration-warning="" -->
                                <list string="Sessions"
                                decoration-danger="state not in ['draft','done','confirmed']"
                                decoration-success="state == 'draft'"
                                decoration-info="state == 'confirmed'"
                                decoration-muted="state == 'done'"
                                >
                                    <field name="session_name"/>
                                    <field name="state"/>
                                    <button name="action_set_draft" type="object" icon="fa-rotate-right"
                                        invisible="state in ['draft']"
                                        string="Draft"
                                    />
                                    <button name="action_set_confirmed" type="object" icon="fa-thumbs-up"
                                    invisible="state not in ['draft']"
                                    string="Confirm"
                                    />

                                    <button name="action_set_done" type="object" icon="fa-check"
                                    invisible="state not in ['confirmed']"
                                    string="Done"
                                    />
                                    <field name="start_date"/>
                                    <field name="duration"/>
                                    <field name="seats"/>
                                </list>

                                <form string="Session" create="true" delete="true" edit="true">
                                    <header>
                                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"  />
                                    </header>
                                    <sheet>
                                        <div class="oe_title">
                                            <label for="session_name" class="oe_edit_only" />
                                            <h1><field name="session_name" placeholder="Describe the item..." /></h1>
                                        </div>

                                    </sheet>
                                </form>

                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- model.name search view -->
    <record id="rs_class_view_search" model="ir.ui.view">
        <field name="name">rs_class.view.search</field>
        <field name="model">rs.class</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <!-- Add your fields here -->
                <field name="course_name"/>
                <field name="responsible_id"/>

                <searchpanel>
                    <field name="responsible_id" select="multi" icon="fa-users" string="Course Taker" />
                </searchpanel>

            </search>
        </field>
    </record>

    <!-- AcciÃ³n para el modelo rs.class -->
    <record id="rs_class_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">rs.class</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
